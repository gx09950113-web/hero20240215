{
  "書名": "百川律典",
  "章節": [
    {
      "章": "第一章",
      "標題": "三省六部官制綱要",
      "條文": [
        {
          "條": "第一條",
          "名稱": "組織總述",
          "內容": {
            "三省": ["尚書省", "中書省", "門下省"],
            "六部": {
              "吏部": "掌銓選、品階、考課與官籍",
              "戶部": "掌財賦、戶籍、田籍、轉運",
              "禮部": "掌典儀、科舉、外交、宗廟",
              "兵部": "掌軍籍、徵調、訓練與戰功登錄",
              "刑部": "掌律令、審案、刑獄與赦令",
              "工部": "掌營造、水利、坊市、匠役登記"
            },
            "下屬機構": ["郎署", "使司", "坊院", "倉監"]
          }
        }
      ]
    },
    {
      "章": "第二章",
      "標題": "官品一覽與職責分等",
      "條文": [
        {
          "條": "第一條",
          "等級": "正一至正三品",
          "說明": "屬國政高階決策階層，多由皇帝任命或功臣晉升",
          "職級": [
            {"正一品": ["尚書令", "中書令", "大將軍"]},
            {"從一品": ["左右僕射", "左右丞相", "兵部上將"]},
            {"正二品": ["戶部尚書", "刑部尚書", "鎮軍大監"]},
            {"從二品": ["尚書侍郎", "軍政副監"]},
            {"正三品": ["郡總監", "大理卿", "東征都尉"]}
          ]
        },
        {
          "條": "第二條",
          "等級": "從三品至正五品",
          "說明": "屬地區總管級，多主持一郡一軍或一部門要職",
          "職級": [
            {"從三品": ["侍郎", "右司正", "副都尉"]},
            {"正四品": ["巡察使", "典法卿", "軍營統監"]},
            {"從四品": ["副使", "外監", "前鋒參領"]},
            {"正五品": ["郡丞", "大理正", "軍衛統領"]},
            {"從五品": ["主簿", "監丞", "副統領"]}
          ]
        },
        {
          "條": "第三條",
          "等級": "正六品至正九品",
          "說明": "屬基層與輔佐職，多為承命執事、地方行政與軍事",
          "職級": [
            {"正六品": ["紀事令", "糧道正", "武衛使"]},
            {"從六品": ["訟司", "教錄", "副軍使"]},
            {"正七品": ["文坊監", "倉吏正", "隊正"]},
            {"從七品": ["審案佐", "文錄", "武教副官"]},
            {"正八品": ["典冊使", "訟記", "營補官"]},
            {"從八品": ["基教使", "帳冊佐", "武衛吏"]},
            {"正九品": ["筆令", "案記", "操練參佐"]}
          ]
        }
      ]
    },
    {
      "章": "第三章",
      "標題": "退休與任教條例",
      "條文": [
        {
          "條": "第一條",
          "名稱": "退休年限與條件",
          "規定": [
            "年滿七十歲或任職滿四十年者，得申請致仕",
            "致仕官保留原銜與三成俸祿",
            "因傷病可提前致仕，稱「恩致」"
          ]
        },
        {
          "條": "第二條",
          "名稱": "退休任教",
          "規定": [
            "致仕官可應聘國子監、鄉學、府學任教",
            "不改原官品，稱「講官」「學正」",
            "講官可參與科舉命題、策問、讀卷"
          ]
        }
      ]
    },
    {
      "章": "第四章",
      "標題": "防貪肅紀與監察制度",
      "條文": [
        {
          "條": "第一條",
          "名稱": "誓廉律",
          "規定": [
            "五品以上官員須面陛宣誓守廉",
            "每年呈交資產清冊，由戶部與刑部審核",
            "官員家屬涉貪，連坐處罰",
            "七等血親內有築基以上修士，不得入闈或任官",
            "若親屬後續成修士，官員一年內辭職，否則追罰俸祿"
          ]
        },
        {
          "條": "第二條",
          "名稱": "監察機構",
          "內容": {
            "御史台": "隸屬門下省，巡察百官，受理民訴",
            "御史分道": "十二道，奏章須報尚書令與皇帝",
            "懲處": "查實貪瀆革職、罰俸、流放，永誌官籍"
          }
        }
      ]
    },
    {
      "章": "第五章",
      "標題": "特殊選才與編制官職",
      "條文": [
        {
          "條": "第一條",
          "名稱": "宸祤衛",
          "內容": [
            "皇帝直屬，由慈幼院無修仙資質孤兒組成",
            "受武藝兵策巡防情報訓練",
            "職務：宮闈防衛、皇族近衛、御前親衛、情報",
            "婚配須報備，眷屬落籍溟淵或宮籍",
            "不歸兵部，專聽皇命"
          ]
        },
        {
          "條": "第二條",
          "名稱": "祥穹軍",
          "內容": [
            "皇帝直屬，由慈幼院具修仙資質孤兒選拔",
            "送四大宗門修習，費用由皇室供給",
            "學成後專任監管修行者、情報與特案",
            "婚配眷屬落籍溟淵或皇籍，不得轉民籍"
          ]
        },
        {
          "條": "第三條",
          "名稱": "編制官職與限制",
          "宸祤衛": {
            "宸祤長": "從三品，統領全衛",
            "近宸副使": "正四品，宮中護衛",
            "情報典監": "從四品，掌情報偽裝",
            "外務伍監": "五至七品，輔衛"
          },
          "祥穹軍": {
            "天綸使": "正四品，總理外區情報",
            "靈捕司長": "從四品，術犯妖邪案件整合",
            "承策使": "正五品，密令與跨區調遣"
          },
          "限制": [
            "不得轉調他部",
            "不得兼任地方職務",
            "不得自稱官銜，違者革職追罪"
          ]
        },
        {
          "條": "第四條",
          "名稱": "慈幼院制度",
          "內容": {
            "性質": "官辦孤兒收容所",
            "收容年齡": "3–18歲",
            "課程": {
              "啟蒙班": "識字、數理、生活常規、律令童誦",
              "通識班": "歷史、經學、法理、兵法、靈識初檢",
              "精修班": "文學、武藝、道禮、靈根初引",
              "分途班": "進階戰術、文吏抄錄、道心、禮制操演"
            },
            "去向": {
              "有修仙資質": "送四大宗門，後入祥穹軍",
              "無資質但具軍事潛質": "訓練後編入宸祤衛",
              "無潛質": "送府學、鄉學，應科舉或庶職"
            },
            "制度": [
              "十八歲後停止補助",
              "二十歲後仍未離院，則結訓放出",
              "郡級慈幼院隸屬郡政司",
              "州級慈幼監統籌課程與考核",
              "收養需三戶聯保並備案",
              "師資由吏部指派，致仕官優先"
            ]
          }
        }
      ]
    }
  ],
  "結語": "本卷《官職品級與吏治條章》至此為止"
}
