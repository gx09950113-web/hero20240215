{
  "動物分類": [
    {
      "名稱": "特種動物",
      "特徵": "煉化而成的組合生物，儀式召喚物。",
      "範例": ["幻"]
    },
    {
      "名稱": "哺乳類",
      "特徵": "體表被毛，具有乳腺哺育後代，大多胎生，心臟四腔，恆溫動物。",
      "範例": ["人類", "狗", "貓", "大象", "鯨魚", "蝙蝠"]
    },
    {
      "名稱": "鳥類",
      "特徵": "身體被覆羽毛，前肢演化成翅膀，卵生，心臟四腔，恆溫動物。",
      "範例": ["麻雀", "鷹", "企鵝", "鸚鵡"]
    },
    {
      "名稱": "爬蟲類",
      "特徵": "體表覆蓋鱗片，卵生或卵胎生，冷血動物，心臟多為三腔（部分例外）。",
      "範例": ["蛇", "蜥蜴", "烏龜", "鱷魚"]
    },
    {
      "名稱": "兩棲類",
      "特徵": "幼體多為水生，成體多為陸生，皮膚光滑且可呼吸，需在水中產卵，冷血動物。",
      "範例": ["青蛙", "蟾蜍", "蠑螈"]
    },
    {
      "名稱": "魚類",
      "特徵": "生活在水中，靠鰓呼吸，身體覆蓋鱗片，多為卵生，冷血動物。",
      "範例": ["鯊魚", "金魚", "魟魚", "鯨鯊"]
    },
    {
      "名稱": "昆蟲類",
      "特徵": "體分為頭、胸、腹三部分，具有三對足，多數有翅膀，外骨骼。",
      "範例": ["蜜蜂", "蝴蝶", "螞蟻", "甲蟲"]
    },
    {
      "名稱": "軟體動物",
      "特徵": "身體柔軟，通常有外殼或內殼，生活於水中或潮濕環境中。",
      "範例": ["蝸牛", "章魚", "牡蠣", "墨魚"]
    },
    {
      "名稱": "環節動物",
      "特徵": "身體分節，具有體腔，多生活於土壤或水中。",
      "範例": ["蚯蚓", "水蛭", "沙蠶"]
    },
    {
      "名稱": "棘皮動物",
      "特徵": "成體多為五輻對稱，生活於海洋，具有內骨骼。",
      "範例": ["海星", "海膽", "海參"]
    },
    {
      "名稱": "刺胞動物",
      "特徵": "具有刺胞，輻射對稱，生活於水中。",
      "範例": ["水母", "珊瑚", "海葵"]
    },
    {
      "名稱": "節肢動物",
      "特徵": "體節分明，具有外骨骼和附肢，範圍最廣。",
      "範例": ["蜘蛛", "蝦", "螃蟹", "千足蟲"]
    }
  ]
}
